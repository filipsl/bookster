
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                                                           controllers.HomeController.index

GET     /books/explore                                              controllers.BooksController.explore

GET     /books/search                                               controllers.BooksController.search(q: Option[String])

GET     /books/isbn/$isbn<[0-9]{9}[0-9Xx]>                          controllers.BooksController.show(isbn: String)

GET     /books/isbn/$isbn<[0-9]{9}[0-9Xx]>/rate/$rating<[12345]>    controllers.RatingsController.rate(isbn: String, rating: Int)

GET     /books/isbn/$isbn<[0-9]{9}[0-9Xx]>/unrate                   controllers.RatingsController.unrate(isbn: String)

GET     /books/ratings                                              controllers.RatingsController.show

GET     /books/ratings/clear                                        controllers.RatingsController.unrateAll

GET     /books/ratings/recommend                                    controllers.RatingsController.recommend()

#GET     /books/isbn/:isbn/prices    controllers.BooksController.prices(isbn: String)

# An example controller showing how to write asynchronous code
GET     /message                                controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)
